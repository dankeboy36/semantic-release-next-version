{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "types": ["node", "vitest/globals"],
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.js", "*.config.js", "*.config.mjs", "eslint.config.cjs"]
}
